let mapleader = "\<S-Space>"

nmap <Leader>r :source ~/vimfiles/vimrc<CR>

" emmet変換
imap mmm <C-y>,

" fzf系の操作
nmap <Leader>b :Buffers<CR>

" Vaffle系の操作
nmap <Leader>t :Vaffle %:h<CR>
nmap <Leader>T :Vaffle<CR>

" ハイライトを知る
command! VimShowHlGroup echo synIDattr(synIDtrans(synID(line('.'), col('.'), 1)), 'name')
nmap <Leader>h :VimShowHlGroup<CR>
